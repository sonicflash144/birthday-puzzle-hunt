<! --- Java Script --->
 
<script>

function guess(){
   var answer = document.getElementById("p5_input").value;
   if(answer.toLowerCase() == "change"){
     window.location.assign("https://sonicflash144.github.io/birthday-puzzle-hunt/puzzle-four");
   }
  p5_input.value = '';
}
  
var input = document.getElementById("p3_input");

input.addEventListener("keyup", function(event) {
  if (event.keyCode === 13) {
    event.preventDefault();
    document.getElementById("p5_button").click();
  }
});
 
function hint1(){
  alert("\"How the lines are drawn\" refers to the lines in the poem. The \"shortest common unit of time\" is a second.");
 }
 function hint2(){
  alert("This clue is very literal. In the first sentence of his broadcast, what did the speaker say he wants you to take away? Then, remove the number from your answer.");
 }
 function hint3(){
  alert("\"From the east\" is telling you to look to the rightmost content of the poem.");
 }
 
</script>

